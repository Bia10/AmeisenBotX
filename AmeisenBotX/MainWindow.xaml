<Window x:Class="AmeisenBotX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmeisenBotX"
        mc:Ignorable="d"
        Title="MainWindow" Height="240" Width="420" Closing="Window_Closing" WindowStyle="None" AllowsTransparency="True" BorderThickness="1" ResizeMode="CanResizeWithGrip" MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded">
    <Window.BorderBrush>
        <SolidColorBrush Color="{DynamicResource DarkAccent1}"/>
    </Window.BorderBrush>
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource DarkBackground}"/>
    </Window.Background>
    <Grid>
        <Label x:Name="labelPlayerName" Content="BotName" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Unispace" FontSize="20" Margin="4,0,0,0">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource DarkForeground}"/>
            </Label.Foreground>
        </Label>
        <Label x:Name="labelCurrentState" Content="None" HorizontalAlignment="Left" Margin="4,22,0,0" VerticalAlignment="Top" FontFamily="Unispace">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource DarkForeground}"/>
            </Label.Foreground>
        </Label>
        <Button x:Name="buttonExit" Content="X" Margin="0,0,1,0" Click="ButtonExit_Click" BorderThickness="1,0,0,1" Padding="1" HorizontalAlignment="Right" Width="20" Height="20" VerticalAlignment="Top" FontFamily="Verdana">
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource DarkForeground}"/>
            </Button.Foreground>
            <Button.BorderBrush>
                <SolidColorBrush Color="{DynamicResource DarkBorder}"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource DarkBackground}"/>
            </Button.Background>
        </Button>
        <ProgressBar x:Name="progressbarHealth" HorizontalAlignment="Left" Height="10" Margin="10,47,0,0" VerticalAlignment="Top" Width="100" BorderThickness="1,0,0,1">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="{DynamicResource PlayerHealthBar}"/>
            </ProgressBar.Foreground>
            <ProgressBar.BorderBrush>
                <SolidColorBrush Color="{DynamicResource DarkBorder}"/>
            </ProgressBar.BorderBrush>
            <ProgressBar.Background>
                <SolidColorBrush Color="{DynamicResource DarkBackground}"/>
            </ProgressBar.Background>
        </ProgressBar>
        <ProgressBar x:Name="progressbarSecondary" HorizontalAlignment="Left" Height="10" Margin="10,62,0,0" VerticalAlignment="Top" Width="100" BorderThickness="1,0,0,1" Foreground="Cyan">
            <ProgressBar.BorderBrush>
                <SolidColorBrush Color="{DynamicResource DarkBorder}"/>
            </ProgressBar.BorderBrush>
            <ProgressBar.Background>
                <SolidColorBrush Color="{DynamicResource DarkBackground}"/>
            </ProgressBar.Background>
        </ProgressBar>
        <ProgressBar x:Name="progressbarExp" HorizontalAlignment="Left" Height="10" Margin="10,77,0,0" VerticalAlignment="Top" Width="100" BorderThickness="1,0,0,1">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="{DynamicResource PlayerExpBar}"/>
            </ProgressBar.Foreground>
            <ProgressBar.BorderBrush>
                <SolidColorBrush Color="{DynamicResource DarkBorder}"/>
            </ProgressBar.BorderBrush>
            <ProgressBar.Background>
                <SolidColorBrush Color="{DynamicResource DarkBackground}"/>
            </ProgressBar.Background>
        </ProgressBar>
        <WrapPanel HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="116" Margin="6,216,0,0">
            <Label x:Name="labelCurrentTickTime" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Unispace" FontSize="10" Background="{x:Null}" Padding="0,5,5,5">
                <Label.Foreground>
                    <SolidColorBrush Color="{DynamicResource TextAccent}"/>
                </Label.Foreground>
            </Label>
            <Label x:Name="labelCurrentTickTimeDesc" Content="ms" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Unispace" FontSize="10" Background="{x:Null}" Padding="0,5,5,5">
                <Label.Foreground>
                    <SolidColorBrush Color="{DynamicResource DarkForeground}"/>
                </Label.Foreground>
            </Label>
            <Label x:Name="labelCurrentObjectCount" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Unispace" FontSize="10" Background="{x:Null}">
                <Label.Foreground>
                    <SolidColorBrush Color="{DynamicResource TextAccent}"/>
                </Label.Foreground>
            </Label>
            <Label x:Name="labelCurrentObjectCountDesc" Content="Objects" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Unispace" FontSize="10" Background="{x:Null}" Padding="0,5">
                <Label.Foreground>
                    <SolidColorBrush Color="{DynamicResource DarkForeground}"/>
                </Label.Foreground>
            </Label>
        </WrapPanel>
        <Rectangle HorizontalAlignment="Left" Margin="122,0,0,0" Width="1">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource DarkBorder}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="labelDebug" Content="None" HorizontalAlignment="Left" Margin="123,0,0,0" VerticalAlignment="Top" FontFamily="Unispace">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource DarkForeground}"/>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
